<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp"
    android:background="@drawable/border"
    android:layout_margin="7dp"
    >

    <TextView
        android:id="@+id/added_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textSize="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/added_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="희석액 공급량"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/added_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="온도"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/added_illumination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="조도"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/added_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="습도"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"/>

           

        </LinearLayout>

    </LinearLayout>

</LinearLayout>